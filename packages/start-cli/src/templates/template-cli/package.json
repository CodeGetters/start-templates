{
  "name": "{{project-name}}",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.17.1",
  "description": "A CLI tool for creating projects",
  "author": "",
  "license": "MIT",
  "keywords": [
    "cli",
    "{{keywords}}"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "{{cli-name}}": "./dist/index.js",
    "create-{{cli-name}}": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prepublishOnly": "pnpm build",
    "test": "node dist/index.js --help",
    "test:create": "node dist/index.js create test-project -t react-ts",
    "test:list": "node dist/index.js list",
    "test:version": "node dist/index.js version"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^12.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.3.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
